<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Treasure Hunt</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f0f8ff;
      overflow: hidden;
      margin: 0;
    }
    #gameArea {
      position: relative;
      height: 200px;
      width: 100vw;
      background: linear-gradient(to bottom, #b3e5fc, #fff);
    }
    .sprite, .chest {
      position: absolute;
      bottom: 0;
      height: 100px;
    }
    .sprite {
      left: 0;
      transition: left 0.3s ease-in-out;
    }
    .chest {
      right: 50px;
    }
  </style>
</head>
<body>
  <div id="gameArea">
    <img id="character" class="sprite" src="https://i.imgur.com/v4lDfLL.png" />
    <img class="chest" src="https://i.imgur.com/mw8NFnP.png" />
  </div>
  <audio id="chime" src="https://actions.google.com/sounds/v1/cartoon/wood_plank_flicks.ogg"></audio>

  <script src="https://www.gstatic.com/firebasejs/10.3.1/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.3.1/firebase-database-compat.js"></script>
  <script>
    // Replace this config with yours from Firebase
    const firebaseConfig = {
      apiKey: "YOUR_API_KEY",
      authDomain: "YOUR_PROJECT_ID.firebaseapp.com",
      databaseURL: "https://YOUR_PROJECT_ID.firebaseio.com",
      projectId: "YOUR_PROJECT_ID",
      storageBucket: "YOUR_PROJECT_ID.appspot.com",
      messagingSenderId: "YOUR_SENDER_ID",
      appId: "YOUR_APP_ID"
    };

    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();

    const character = document.getElementById("character");
    const chime = document.getElementById("chime");
    let currentMoveCount = 0;

    const STEP_WIDTH = 50;

    db.ref("game/moveCount").on("value", snapshot => {
      const newCount = snapshot.val();
      if (typeof newCount === "number" && newCount !== currentMoveCount) {
        const dx = (newCount - currentMoveCount) * STEP_WIDTH;
        const currentLeft = parseInt(character.style.left || "0");
        character.style.left = (currentLeft + dx) + "px";
        currentMoveCount = newCount;
        chime.play();
      }
    });
  </script>
</body>
</html>
